    <body>
        <div class="Container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="edit1">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 style="text-align: center;">Status Kegiatan</h1>
                            </div>
                        </div>
                        <form action="/todo/edit/<%= data[0].id%>" method="POST">
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2 ">
                                    <select class="form-control" name="status" id="status">
                                        <option value="0" <%= (data[0].status==0)? 'selected': ''%>>Belum</option>
                                        <option value="1" <%= (data[0].status==1)? 'selected': ''%>>Sudah</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2 " style="text-align: center;margin-top: 15px;">
                                    <button type="submit" class="btn btn-info">SUBMIT</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
